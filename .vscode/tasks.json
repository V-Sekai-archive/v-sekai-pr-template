{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build linuxbsd",
      "type": "shell",
      "command": "scons",
      "args": [
        "-j34",
        "platform=linuxbsd",
        "werror=no",
        "use_llvm=yes",
        "dev=yes",
        "use_thinlto=yes",
        "use_asan=yes",
        "use_bsan=yes",
        "bits=64",
        "deprecated=yes",
        "target=release_debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
